// Represents a role in the system =================================================================

model Role {
    id            String         @id @default(cuid())
    name          String           @unique
    status        Status           @default(ACTIVE)
    created_at    DateTime         @default(now())
    updated_at    DateTime         @updatedAt
    permissions   RolePermission[]
    userRoles     UserRole[]
    pageRoles     PageRole[]
    userPageRoles UserPageRole[]

    @@index([name])
}
